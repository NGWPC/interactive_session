<tool id='Matthew.Shaxted_interactive_session' name='Matthew.Shaxted_interactive_session'>
  <command interpreter='bash'>main.sh</command>
  <inputs>
    <param name='_pw_service_name' label='Service' type='hidden' value='turbovnc' width='50%_none'></param>
    <param name='_pw_slurm_module' label='Slurm module' type='hidden' value='nextflow' width='50%_none'></param>
    <param name='_pw_service_bin' label='Service binary' type='hidden' value='nextflow---console' width='50%_none'></param>
    <param name='_pw_novnc_dir' label='Default noVNC installation directory' type='hidden' value='__poolworkdir__/pw/bootstrap/noVNC-1.3.0' width='50%_none'></param>
    <param name='_pw_novnc_tgz' label='Path to noVNC TGZ' type='hidden' value='/swift-pw-bin/apps/noVNC-1.3.0.tgz' width='50%_none'></param>
    <section name='host' type='section' title='NextFlow Host' expanded='true'>
      <conditional name="partition_or_controller_cond">
            <param name="partition_or_controller" type="boolean" truevalue="Partition" falsevalue="Controller" checked="True" label="Partition or controller node?" help='Choose to run the service in the controller / login or partition / compute nodes' width="25%_none" optional='true' float="right"></param>
            <when value="Partition">
                <param name='_pw_partition' label='SLURM partition:' type='text' help='Partition to submit the interactive job to.' value='normal' width='50%_none'>
                </param>
                <param name='_pw_cpus_per_task' label='CPUs per task:' type='integer' min="1" max="10" help='--cpus-per-task=value slurm parameter' value='1' width='50%_none'>
                </param>
                <param name='_pw_walltime' label='Walltime' type='text' help='e.g. 01:00:00 - Amount of time slurm will honor the interactive session.' value='01:00:00' width='50%_none'>
                </param>
                <param name='_pw_custom_directives' label='Additional SLURM directives' type='text' help='e.g. ;--mem=1000;--gpus-per-node=1 - Use the semicolon character ; before each parameter. Use no spaces.' value='' width='50%_none'>
                </param>
            </when>
        </conditional>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>
