<tool id='Matthew.Shaxted_interactive_session' name='Matthew.Shaxted_interactive_session'>
  <command interpreter='bash'>main.sh</command>
  <inputs>
    <param name='service_name' label='Service' type='hidden' value='turbovnc' width='50%_none'></param>
    <param name='slurm_module' label='Slurm module' type='hidden' value='schrodinger' width='50%_none'></param>
    <param name='service_bin' label='Service binary' type='hidden' value='maestro' width='50%_none'></param>
    <param name='novnc_dir' label='Default noVNC installation directory' type='hidden' value='__poolworkdir__/pw/noVNC-1.3.0' width='50%_none'></param>
    <param name='novnc_tgz' label='Path to noVNC TGZ' type='hidden' value='/swift-pw-bin/apps/noVNC-1.3.0.tgz' width='50%_none'></param>
    <param name='turbovnc_dir' label='Default turbovnc installation directory' type='hidden' value='__poolworkdir__/pw/TurboVNC' width='50%_none'></param>
    <param name='turbovnc_tgz' label='Path to turbovnc TGZ' type='hidden' value='/swift-pw-bin/apps/turbovnc.tgz' width='50%_none'></param>
    <section name='host' type='section' title='Schrodinger Maestro Host' expanded='true'>
      <conditional name="partition_or_controller_cond">
            <param name="partition_or_controller" type="boolean" truevalue="Partition" falsevalue="Controller" checked="True" label="Partition or controller node?" help='Choose to run the service in the controller / login or partition / compute nodes' width="25%_none" optional='true' float="right"></param>
            <when value="Partition">
                <param name='partition' label='Slurm partition:' type='text' help='Partition to submit the interactive job to.' value='normal' width='50%_none'>
                </param>
                <param name='cpus_per_task' label='CPUs per task:' type='integer' min="1" max="10" help='--cpus-per-task=value slurm parameter' value='1' width='50%_none'>
                </param>
                <param name='walltime' label='Walltime' type='text' help='e.g. 01:00:00 - Amount of time slurm will honor the interactive session.' value='01:00:00' width='50%_none'>
                </param>
            </when>
        </conditional>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>
